<h1>Create a post</h1>

<%= form_for @posts, local: true do |f| %>
  <ul>
  <% @posts.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>


<% end %>